{
    "require": {
        "php": "^8.1",
        "phpoffice/phpspreadsheet": "^3.0",
        "symfony/dom-crawler": "^7.0",
        "guzzlehttp/guzzle": "^7.4",
        "mpdf/mpdf": "^8.1",
        "catfan/medoo": "^2.0",
        "league/plates": "^3.3",
        "cakephp/chronos": "^3.1",
        "symfony/var-dumper": "^7.0",
        "godruoyi/php-snowflake": "^3.0",
        "phpoffice/phpword": "^1.2",
        "psy/psysh": "^0.12",
        "fakerphp/faker": "^1.19",
        "league/flysystem": "^3.0",
        "kosinix/grafika": "^2.0",
        "league/route": "^5.1",
        "laminas/laminas-diactoros": "^3.0",
        "laminas/laminas-httphandlerrunner": "^2.1",
        "league/container": "^4.2",
        "league/climate": "^3.8",
        "openai-php/client": "^0.8",
        "revolt/event-loop": "^1.0",
        "spatie/async": "^1.6",
        "monolog/monolog": "^3.5",
        "ddn/sapp": "^1.4",
        "phpmailer/phpmailer": "^6.9",
        "picocss/pico": "^2.0",
        "scssphp/scssphp": "^1.13",
        "smalot/pdfparser": "^2.11",
        "php-ffmpeg/php-ffmpeg": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "modules\\": "modules"
        },
        "files": [
            "helper.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "build": [
            "vendor/bin/pscss --style=compressed vendor/picocss/pico/css/pico.min.css static/css/pico.min.css"
        ]
    }
}
